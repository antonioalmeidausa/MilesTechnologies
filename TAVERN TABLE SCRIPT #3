CREATE TABLE ROLES 
    (
        ROLE_ID INT PRIMARY KEY IDENTITY (1, 1), 
        ROLE_DESCRIPTION VARCHAR(100) NOT NULL
    );

    INSERT INTO ROLES (ROLE_DESCRIPTION)
VALUES 
    ('OWNER'),
    ('PARTNER'),
    ('ADMINISTRATOR');

CREATE TABLE OWNER 
    (
        OWNER_ID INT PRIMARY KEY IDENTITY (1, 1), 
        NAME VARCHAR(100) NOT NULL, 
        ROLE_ID INT
    );

