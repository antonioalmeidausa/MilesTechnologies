    (
        RATS_ID INT PRIMARY KEY IDENTITY (1,1), 
        RATS_NAME VARCHAR(100) NOT NULL, 
        TAVERN_ID INT FOREIGN KEY REFERENCES TAVERN(TAVERN_ID)
    );

