CREATE TABLE TAVERN 
    (
        TAVERN_ID INT PRIMARY KEY IDENTITY (1, 1), 
        TAVERN_NAME VARCHAR(100) NOT NULL, 
        OWNER_ID INT, 
        TAVERN_ADDRESS INT
    );

ALTER TABLE TAVERN 
ADD FOREIGN KEY (OWNER_ID) REFERENCES OWNER(OWNER_ID);

ALTER TABLE TAVERN
ADD FOREIGN KEY (TAVERN_ADDRESS) REFERENCES LOCATION(LOCATION_ID);

